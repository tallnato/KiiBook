<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.kii.launcher"
    android:id="@+id/activity_kii_launcher_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_kii_launcher_logo"
            android:layout_width="90dip"
            android:layout_height="100dip"
            android:layout_marginLeft="40dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/activity_kii_launcher_profile"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/ic_wall_profile" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/activity_kii_launcher_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip" >

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/ic_wall_calendar" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_calendar_day"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dip"
                android:gravity="center"
                android:textColor="@color/laucher_wall_text_color"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/activity_kii_launcher_calendar_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/ic_wall_calendar_notification" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_calendar_notification_day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="16dip"
                android:gravity="center"
                android:textColor="@color/laucher_wall_text_color"
                android:textStyle="bold" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_calendar_notification_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="42dip"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/laucher_wall_text_color"
                android:textSize="20dip"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/activity_kii_launcher_messages"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/ic_wall_messages" />

        <FrameLayout
            android:id="@+id/activity_kii_launcher_messages_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/ic_wall_messages_notification" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_messages_notification_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="42dip"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/laucher_wall_text_color"
                android:textSize="20dip"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/activity_kii_launcher_homework"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/ic_wall_homework" />

        <FrameLayout
            android:id="@+id/activity_kii_launcher_homework_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/ic_wall_homework_notification" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_homework_notification_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="42dip"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/laucher_wall_text_color"
                android:textSize="20dip"
                android:textStyle="bold" />
        </FrameLayout>

        <ImageView
            android:id="@+id/activity_kii_launcher_news"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="40dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/ic_wall_news" />

        <FrameLayout
            android:id="@+id/activity_kii_launcher_news_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="40dip"
            android:visibility="gone" >

            <ImageView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/ic_wall_news_notification" />

            <com.kii.launcher.KiiTextView 
                android:id="@+id/activity_kii_launcher_news_notification_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="42dip"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/laucher_wall_text_color"
                android:textSize="20dip"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_kii_homescree_apps_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/activity_kii_homescree_apps_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        app:fillColor="#FFF"
        app:strokeColor="#ffff"
        app:strokeWidth="1dp" />

</LinearLayout>