<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kii.kiibook.teacher"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_my_profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="kiibook.profile.slave.ProfileWidget.ACTION_WIDGET_CONFIGURE_PRO" />
                <action android:name="kiibook.profile.slave.ProfileWidget.ACTION_WIDGET_CONFIGURE_CAL" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </activity>

        <!-- Broadcast Receiver that will process AppWidget updates -->
        <receiver
            android:name=".ProfileWidget"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>

        <activity
            android:name="kii.kiibook.managerclass.ManagerClassActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="kii.kiibook.managerclass.InitManagerActivity"
            android:icon="@android:drawable/ic_dialog_info"
            android:theme="@android:style/Theme.DeviceDefault.Dialog"
            android:label="@string/app_manager_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>