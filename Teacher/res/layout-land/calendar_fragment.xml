<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <CalendarView
        android:id="@+id/calendarView_fragment_profile"
        android:layout_width="400dp"
        android:showWeekNumber="false"
        android:background="@drawable/topblock_image_background"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/calendar_fragment_text_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="dia"
            android:textSize="25dp" />

        <ListView
            android:id="@+id/calendar_fragment_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/pager_calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>
</LinearLayout>